<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="windowActionBar">false</item>-->
    </style>

    <style name="NameStyle">
        <item name="android:layout_marginTop">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TextStyleTitle1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_user_prefix_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
    </style>

    <style name="TextStyleTitle2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_user_main_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_user_sub_size</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
    </style>

</resources>